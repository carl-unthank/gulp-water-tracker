@inherits LayoutComponentBase

<div class="min-h-screen bg-gradient-to-br from-ocean-500 via-aqua-400 to-ocean-600 flex items-center justify-center p-4 relative overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -right-40 w-96 h-96 bg-white/10 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-aqua-300/20 rounded-full blur-3xl animate-pulse auth-bg-delay-2"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-radial from-white/5 to-transparent rounded-full"></div>
    </div>

    <!-- Floating Water Drops -->
    <div class="absolute inset-0 pointer-events-none">
        <div class="absolute top-20 left-20 w-4 h-4 bg-white/20 rounded-full animate-bounce auth-bg-delay-1"></div>
        <div class="absolute top-40 right-32 w-3 h-3 bg-aqua-200/30 rounded-full animate-bounce auth-bg-delay-3"></div>
        <div class="absolute bottom-32 left-1/3 w-5 h-5 bg-white/15 rounded-full animate-bounce auth-bg-delay-5"></div>
        <div class="absolute bottom-20 right-20 w-2 h-2 bg-ocean-200/40 rounded-full animate-bounce auth-bg-delay-2"></div>
    </div>

    <div class="w-full max-w-md relative z-10">
        <!-- Hero Logo Section -->
        <div class="text-center mb-12">
            <div class="relative mb-6">
                <div class="w-20 h-20 mx-auto bg-gradient-to-br from-white to-aqua-100 rounded-full shadow-2xl flex items-center justify-center mb-4 border-4 border-white/30">
                    <span class="text-3xl">ðŸ’§</span>
                </div>
            </div>
            <h1 class="text-5xl font-black text-white mb-3 tracking-tight">
                Gulp<span class="text-aqua-200">!</span>
            </h1>
            <p class="text-ocean-100 text-lg font-medium">Track your water intake</p>
        </div>

        <!-- Auth Content Card -->
        <div class="bg-white/95 backdrop-blur-xl rounded-3xl shadow-2xl p-8 border border-white/50 relative">
            <!-- Decorative corner elements -->
            <div class="absolute top-0 left-0 w-20 h-20 bg-gradient-to-br from-ocean-400/20 to-transparent rounded-tl-3xl"></div>
            <div class="absolute bottom-0 right-0 w-20 h-20 bg-gradient-to-tl from-aqua-400/20 to-transparent rounded-br-3xl"></div>

            @Body
        </div>

        <!-- Footer -->
        <div class="text-center mt-8">
            <p class="text-white/80 text-sm font-medium">
                &copy; @DateTime.Now.Year Gulp! - Stay Hydrated, Stay Healthy
            </p>
        </div>
    </div>
</div>
