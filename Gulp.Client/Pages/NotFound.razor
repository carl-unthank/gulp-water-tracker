@page "/404"
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Page Not Found - Gulp</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-200 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-xl p-8 max-w-md w-full text-center">
        <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-search text-white text-2xl"></i>
        </div>

        <h1 class="text-6xl font-bold text-gray-800 mb-2">404</h1>
        <h2 class="text-2xl font-semibold text-gray-600 mb-4">Page Not Found</h2>

        <p class="text-gray-500 mb-8 leading-relaxed">
            The page you're looking for doesn't exist or has been moved.
        </p>

        <div class="flex flex-col sm:flex-row gap-3 mb-8">
            <button class="inline-flex items-center justify-center px-6 py-3 bg-blue-500 border border-blue-500 text-white rounded-md font-medium hover:bg-blue-600 hover:border-blue-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" @onclick="@(() => Navigation.NavigateTo("/"))">
                <i class="fas fa-home mr-2"></i>
                Go Home
            </button>
            <button class="inline-flex items-center justify-center px-6 py-3 bg-transparent border border-gray-300 text-gray-700 rounded-md font-medium hover:bg-gray-50 hover:border-gray-400 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" @onclick="@GoBack">
                <i class="fas fa-arrow-left mr-2"></i>
                Go Back
            </button>
        </div>

        <div class="text-left">
            <h3 class="text-lg font-semibold text-gray-700 mb-3">Try these instead:</h3>
            <ul class="space-y-2">
                <li><a href="/" class="text-blue-500 hover:text-blue-600 hover:underline transition-colors duration-200">Today's Water Intake</a></li>
                <li><a href="/history" class="text-blue-500 hover:text-blue-600 hover:underline transition-colors duration-200">History</a></li>
                <li><a href="/auth" class="text-blue-500 hover:text-blue-600 hover:underline transition-colors duration-200">Sign In</a></li>
            </ul>
        </div>
    </div>
</div>

@code {
    private async Task GoBack()
    {
        await JSRuntime.InvokeVoidAsync("history.back");
    }
}
