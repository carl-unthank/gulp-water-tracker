<!-- Reusable Loading Indicator Component -->
<div class="flex justify-center @ContainerClass">
    <div class="flex space-x-1">
        <div class="@DotClass bg-gradient-to-r from-blue-500 to-purple-500 rounded-full animate-bounce loading-dot-1"></div>
        <div class="@DotClass bg-gradient-to-r from-cyan-500 to-blue-500 rounded-full animate-bounce loading-dot-2"></div>
        <div class="@DotClass bg-gradient-to-r from-purple-500 to-pink-500 rounded-full animate-bounce loading-dot-3"></div>
    </div>
    @if (!string.IsNullOrEmpty(Message))
    {
        <p class="@MessageClass mt-4">@Message</p>
    }
</div>

@code {
    [Parameter] public string Size { get; set; } = "medium"; // small, medium, large
    [Parameter] public string ContainerClass { get; set; } = "py-12";
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public string MessageClass { get; set; } = "text-gray-600 font-medium";

    private string DotClass => Size switch
    {
        "small" => "w-2 h-2",
        "medium" => "w-3 h-3",
        "large" => "w-4 h-4",
        _ => "w-3 h-3"
    };
}
